# GPT Mestre Autônomo v4.0 - Configuração de Ambiente

# === CONFIGURAÇÕES OBRIGATÓRIAS ===
# API Key da Anthropic (obrigatória)
ANTHROPIC_API_KEY=sk-ant-api03-sua_chave_aqui

# Modelo Claude a ser usado
CLAUDE_MODEL=claude-3-sonnet-20241022

# Máximo de tokens por resposta
CLAUDE_MAX_TOKENS=8192

# === CONFIGURAÇÕES OPCIONAIS ===
# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Formato do log
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss}  < /dev/null |  {level} | {name} | {message}

# Arquivo de log principal
LOG_FILE=logs/gpt_mestre.log

# Rotação de logs
LOG_ROTATION=100 MB

# Retenção de logs
LOG_RETENTION=30 days

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
# Modo debug (True/False)
DEBUG=False

# Porta do Streamlit (opcional)
STREAMLIT_PORT=8501

# === CONFIGURAÇÕES FUTURAS ===
# Telegram Bot (futuro)
# TELEGRAM_BOT_TOKEN=seu_token_aqui

# Notion API (futuro)
# NOTION_API_KEY=sua_chave_aqui

# Google API (futuro)
# GOOGLE_API_KEY=sua_chave_aqui
